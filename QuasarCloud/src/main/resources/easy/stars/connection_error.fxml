<?xml version="1.0" encoding="UTF-8"?>

<?import javafx.scene.control.Button?>
<?import javafx.scene.control.Label?>
<?import javafx.scene.image.ImageView?>
<?import javafx.scene.layout.VBox?>
<VBox xmlns="http://javafx.com/javafx"
      xmlns:fx="http://javafx.com/fxml"
      id="window"
      alignment="CENTER"
      fx:controller="easy.stars.javafx.controllers.errors.NetworkError"
      prefHeight="400.0" prefWidth="600.0">
    <ImageView fx:id="networkErrorImg"/>
    <Label id="ConnectionErrorLabel" text="Похоже вы не подключены к сети" textAlignment="CENTER"/>
    <Button text="Повторить" onAction="#repeat"/>
</VBox>
